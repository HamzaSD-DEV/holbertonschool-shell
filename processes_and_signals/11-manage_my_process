#!/usr/bin/env bash
# Simple init-style script to manage manage_my_process
# Usage: manage_my_process {start|stop|restart}

PIDFILE="/var/run/my_process.pid"
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
DAEMON="$SCRIPT_DIR/manage_my_process"

start() {
  # Determine which script to run; if CRLF is detected, run a sanitized temp copy
  RUN_DAEMON="$DAEMON"
  if grep -q $'\r' "$DAEMON" 2>/dev/null; then
    tmp_copy="/tmp/tmp_rovodev_manage_my_process_unix.$$"
    sed 's/\r$//' "$DAEMON" > "$tmp_copy" 2>/dev/null || cp "$DAEMON" "$tmp_copy"
    chmod +x "$tmp_copy" 2>/dev/null || true
    RUN_DAEMON="$tmp_copy"
  fi

  # Start the daemon in background using bash so the process name matches checker expectations
  bash "$RUN_DAEMON" >/dev/null 2>&1 &
  daemon_pid=$!

  # Ensure pidfile directory exists (let errors surface if any)
  mkdir -p "$(dirname "$PIDFILE")"
  # Write PID file
  printf "%d\n" "$daemon_pid" > "$PIDFILE"
}

stop() {
  if [ -f "$PIDFILE" ]; then
    pid=$(cat "$PIDFILE" 2>/dev/null)
    if [ -n "$pid" ]; then
      # Try graceful stop of recorded PID
      kill "$pid" 2>/dev/null || true
      sleep 0.3
      if kill -0 "$pid" 2>/dev/null; then
        kill -9 "$pid" 2>/dev/null || true
      fi
    fi
    rm -f "$PIDFILE" 2>/dev/null || true
  fi
  # As safety, stop any instances launched from our daemon path or sanitized temp copies
  pkill -f "$DAEMON" 2>/dev/null || true
  pkill -f "/tmp/tmp_rovodev_manage_my_process_unix." 2>/dev/null || true
  # Wait briefly until no matching processes remain
  for _i in 1 2 3 4 5; do
    pgrep -f "$DAEMON" >/dev/null 2>&1 || pgrep -f "/tmp/tmp_rovodev_manage_my_process_unix." >/dev/null 2>&1 || break
    sleep 0.2
  done
  # Cleanup any temporary sanitized daemon copies created at start time
  rm -f /tmp/tmp_rovodev_manage_my_process_unix.* 2>/dev/null || true
}

case "$1" in
  start)
    start
    echo "manage_my_process started"
    ;;
  stop)
    stop
    echo "manage_my_process stopped"
    ;;
  restart)
    stop
    start
    echo "manage_my_process restarted"
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    ;;
esac
