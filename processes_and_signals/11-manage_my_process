#!/usr/bin/env bash
# Simple init-style script to manage manage_my_process
# Usage: manage_my_process {start|stop|restart}

PIDFILE="/var/run/my_process.pid"
DAEMON="./manage_my_process"

start() {
  # Start the daemon fully detached if possible
  if command -v setsid >/dev/null 2>&1; then
    setsid "$DAEMON" >/dev/null 2>&1 &
  else
    nohup "$DAEMON" >/dev/null 2>&1 &
  fi
  daemon_pid=$!
  # Ensure pidfile directory exists (let errors surface if any)
  mkdir -p "$(dirname "$PIDFILE")"
  # Write PID file
  printf "%d\n" "$daemon_pid" > "$PIDFILE"
}

stop() {
  if [ -f "$PIDFILE" ]; then
    pid=$(cat "$PIDFILE" 2>/dev/null)
    if [ -n "$pid" ]; then
      kill "$pid" 2>/dev/null || true
    fi
    rm -f "$PIDFILE" 2>/dev/null || true
  fi
}

case "$1" in
  start)
    start
    echo "manage_my_process started"
    ;;
  stop)
    stop
    echo "manage_my_process stopped"
    ;;
  restart)
    stop
    start
    echo "manage_my_process restarted"
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    ;;
esac
